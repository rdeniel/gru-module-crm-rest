<?xml version="1.0" encoding="UTF-8"?><plug-in>
    <!-- Plugin Informations -->
    <name>crm-rest</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>2.0.4-SNAPSHOT</version>
    <documentation/>
    <installation/>
    <changes/>
    <user-guide/>
    <description>module.crm.rest.module.description</description>
    <provider>module.crm.rest.module.provider</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/crm/modules/rest/crm-rest.png</icon-url>
    <copyright>Copyright 2001-2015 Mairie de Paris</copyright>
    <core-version-dependency>
        <min-core-version>2.4.0</min-core-version>
        <max-core-version/>
    </core-version-dependency>
    <db-pool-required>0</db-pool-required>

	<!-- REST security : Comment the filters if you want to test the REST service with the given JSP -->
    <filters>
       <filter>
           <filter-name>CRMRestSecurity</filter-name>
           <url-pattern>/rest/crm/*</url-pattern>
           <filter-class>fr.paris.lutece.util.signrequest.servlet.HeaderHashRequestFilter</filter-class>

           <init-param>
               <param-name>elementsSignature</param-name>
               <param-value>id_demand_type,id_demand,id_crm_user,user_guid,id_status_crm</param-value>
           </init-param>

           <init-param>
               <param-name>validityTimePeriod</param-name>
               <param-value>0</param-value>
           </init-param>

           <init-param>
               <param-name>privateKey</param-name>
               <param-value>change me</param-value>
           </init-param>
       </filter>
   </filters>
</plug-in>